#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run TypeScript type checking first
echo "ğŸ“ Checking TypeScript types..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix type errors before committing."
  exit 1
fi

# Format all files with Prettier
echo "âœ¨ Formatting code with Prettier..."
npx prettier --write .
if [ $? -ne 0 ]; then
  echo "âŒ Prettier formatting failed."
  exit 1
fi

# Run lint-staged for final checks
echo "ğŸ§¹ Running lint-staged..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix linting errors before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"