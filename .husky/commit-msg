#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Simple commit message validation
commit_regex='^(feat|fix|docs|style|refactor|test|chore)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "‚ùå Invalid commit message format!"
    echo ""
    echo "Commit message should follow conventional commits format:"
    echo "  <type>[optional scope]: <description>"
    echo ""
    echo "Examples:"
    echo "  feat: add user authentication"
    echo "  fix(auth): resolve login validation issue"
    echo "  docs: update API documentation"
    echo "  style: format code with prettier"
    echo "  refactor(components): optimize performance"
    echo "  test: add unit tests for auth service"
    echo "  chore: update dependencies"
    echo ""
    exit 1
fi